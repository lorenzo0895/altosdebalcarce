<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/general.css">
  <link rel="stylesheet" href="/css/admin-schedule.css">
  <link rel="icon" href="/images/logo.ico" type="image/x-icon" />
  <title>ADB | Edición Turnos</title>
</head>

<body>

  <header>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <div class="container-fluid">
        <a id="titulo-nav" class="navbar-brand" href="/"><img src="/images/logo.png" alt="logo" id="logo">Altos de
          Balcarce</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
          aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav me-auto mb-2 mb-md-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/mis-turnos">Mis turnos</a>
            </li>
            <% if (admin) { %>
              <li class="nav-item">
                <a class="nav-link" href="/admin">Administrador</a>
              </li>
              <% } %>
                <li class="nav-item">
                  <a class="nav-link" href="/perfil">Perfil</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/logout">Cerrar sesión</a>
                </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <section class="contenido">

    <nav>
      <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-musculacion"
          type="button" role="tab" aria-controls="nav-home" aria-selected="true">Musculación</button>
        <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-pilates" type="button"
          role="tab" aria-controls="nav-profile" aria-selected="false">Pilates</button>
      </div>
    </nav>
    <div class="tab-content" id="nav-tabContent">
      <div class="tab-pane fade show active" id="nav-musculacion" role="tabpanel" aria-labelledby="nav-home-tab">
        <form action="/admin/schedule/musculacion" method="POST">
          <h3>Lunes <img src="/images/plus-circle.svg" onclick="agregar('lunes')" class="agregar" alt="agregar"></h3>
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Desde</th>
                <th scope="col">Hasta</th>
                <th scope="col">Cupo</th>
              </tr>
            </thead>
            <tbody id="lunes">
              <% horMusc.forEach(element => { %>
               <% if (element.dia === 0) { 
                let random = Math.random();
                %>
                
                <tr id="<%= random %>">
                  <td><img class="manito" src="/images/dash-circle.svg" onclick="sacar(<%= random %>)" alt="quitar"></td>
                  <td><input type="time" class="form-control" name="desdelunes" value=""></td>
                  <td><input type="time" class="form-control" name="hastalunes"></td>
                  <td><input type="number" class="form-control" name="cupolunes"></td>
                </tr>

               <% } %>
              <% }) %>
            </tbody>
          </table>
          <h3>Martes <img src="/images/plus-circle.svg" onclick="agregar('martes')" class="agregar" alt="agregar"></h3>
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Desde</th>
                <th scope="col">Hasta</th>
                <th scope="col">Cupo</th>
              </tr>
            </thead>
            <tbody id="martes">
            </tbody>
          </table>
          <h3>Miércoles</h3>
          <h3>Jueves</h3>
          <h3>Viernes</h3>
          <h3>Sábado</h3>
          <h3>Domingo</h3>
          <button type="submit" class="btn btn-primary">Confirmar</button>
        </form>
      </div>
      <div class="tab-pane fade" id="nav-pilates" role="tabpanel" aria-labelledby="nav-profile-tab">
        <h3>Lunes</h3>
        <h3>Martes</h3>
        <h3>Miércoles</h3>
        <h3>Jueves</h3>
        <h3>Viernes</h3>
        <h3>Sábado</h3>
        <h3>Domingo</h3>
      </div>
    </div>


  </section>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>
  <script src="/js/agregarSacar.js"></script>
</body>

</html>