<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/general.css">
  <link rel="stylesheet" href="/css/reserva.css">
  <link rel="stylesheet" href="/css/mis-turnos.css">
  <link rel="icon" href="./images/logo.ico" type="image/x-icon" />
  <title>ADB | Reserva</title>
</head>

<body>

  <header>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <div class="container-fluid">
        <a id="titulo-nav" class="navbar-brand" href="/"><img src="/images/logo.png" alt="logo" id="logo">Altos de
          Balcarce</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
          aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav me-auto mb-2 mb-md-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/mis-turnos">Mis turnos</a>
            </li>
            <% if (admin) { %>
              <li class="nav-item">
                <a class="nav-link" href="/admin">Administrador</a>
              </li>
              <% } %>
                <li class="nav-item">
                  <a class="nav-link" href="/perfil">Perfil</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/logout">Cerrar sesi√≥n</a>
                </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <section class="contenido">
    <div class="card"">
      <div class=" card-header">
      <span class="titulo-item">Turnos</span>
    </div>
    <ul class="list-group list-group-flush">
      <% reservas.forEach(element=> {
        let turno = turnos.filter(turno => turno.id == element.turno);
        turno = turno[0];
        let day = element.dia.getUTCDate() < 10 ? ('0'+element.dia.getUTCDate()) : element.dia.getUTCDate(); 
        
        let
          month =(element.dia.getUTCMonth() +1) < 10 ? ('0'+(element.dia.getUTCMonth() +1)) : (element.dia.getUTCMonth()
          +1); let desdeHoras=turno.desdeHoras < 10 ? ('0' + turno.desdeHoras) : turno.desdeHoras; let
          desdeMinutos=turno.desdeMinutos < 10 ? ('0' + turno.desdeMinutos) : turno.desdeMinutos; let desde=desdeHoras
          + ':' + desdeMinutos; let hastaHoras=turno.hastaHoras < 10 ? ('0' + turno.hastaHoras) : turno.hastaHoras; let
          hastaMinutos=turno.hastaMinutos < 10 ? ('0' + turno.hastaMinutos) : turno.hastaMinutos; let hasta=hastaHoras
          + ':' + hastaMinutos; let seccion=turno.seccion.substring(0,1).toUpperCase() + turno.seccion.substring(1,4)
          + '.' ; %>

          <li class="list-group-item items-separados">

            <span>
              <%= seccion + ' - ' + day + '/' + month + '/' + element.dia.getUTCFullYear() %> -<br/> <%= desde %> a <%= hasta
                    %>
            </span>
            <form action="/mis-turnos/borrar-turno" method="POST">
              <input type="text" name="id" value="<%= turno.id %>" hidden>
              <button type="submit" class="btn btn-danger">Cancelar</button>
            </form>
          </li>
          <% }) %>
    </ul>
    </div>

  </section>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
</body>

</html>